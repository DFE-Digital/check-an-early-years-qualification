@model ErrorSummaryModel

<govuk-error-summary id="error-banner">
    <govuk-error-summary-title>@Model.ErrorBannerHeading</govuk-error-summary-title>
    @foreach (var link in Model.ErrorSummaryLinks)
    {
        <govuk-error-summary-item id="error-banner-link-@{@link.ElementLinkId}" href="#@{@link.ElementLinkId}">@Html.Raw(link.ErrorBannerLinkText)</govuk-error-summary-item>
    }
</govuk-error-summary>