@model Dfe.EarlyYearsQualification.Web.Models.Content.CookiesPageModel

@{
    ViewData["Title"] = "Cookies";
}

<a href="javascript:window.history.back()" class="govuk-back-link">Back</a>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full govuk-grid-column-two-thirds-from-desktop">
        <h1 id="cookies-heading" class="govuk-heading-xl">@Model.Heading</h1>
        <div id="cookies-body" class="govuk-body">@Html.Raw(Model.BodyContent)</div>
        <div class="govuk-form-group">
          @Html.Partial("./Components/RadioButtonGroup/Index", Model.Options)
        </div>
        <div class="govuk-form-group">
            <button type="submit" class="govuk-button" data-module="govuk-button">
                @Model.ButtonText
            </button>
        </div>
    </div>
</div>