@model Dfe.EarlyYearsQualification.Web.Models.Content.AdvicePageModel

@{
    ViewData["Title"] = Model.Heading;
}

@section BeforeMainContent {
    @{
        await Html.RenderPartialAsync("Partials/BackButton", Model.BackButton);
    }
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full govuk-grid-column-two-thirds-from-desktop">
        <h1 class="govuk-heading-xl" id="advice-page-heading">@Model.Heading</h1>
        <div class="govuk-body" id="advice-page-body">@Html.Raw(Model.BodyContent)</div>
    </div>
</div>