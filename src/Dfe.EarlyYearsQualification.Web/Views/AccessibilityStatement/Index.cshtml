@model Dfe.EarlyYearsQualification.Web.Models.Content.AccessibilityStatementPageModel

@{
    ViewData["Title"] = "Accessibility Statement";
}

@{
    await Html.RenderPartialAsync("Partials/BackButton", @Model.BackButton);
}

<main class="govuk-main-wrapper pb-3" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full govuk-grid-column-two-thirds-from-desktop">
            <h1 id="accessibility-statement-heading" class="govuk-heading-xl">@Model.Heading</h1>
            <div id="accessibility-statement-body" class="govuk-body">@Html.Raw(Model.BodyContent)</div>
        </div>
    </div>
</main>