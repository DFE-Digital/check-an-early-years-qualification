@using Dfe.EarlyYearsQualification.Web.Models.Content.HelpViewModels
@using Dfe.EarlyYearsQualification.Web.Models.Content.QuestionModels
@model ConfirmationViewModel

@{
    ViewData["Title"] = Model.Heading;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full govuk-grid-column-two-thirds-from-desktop">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title" id="success-message">
                @Model.BannerSuccessMessage
            </h1>
        </div>

        <div class="govuk-body" id="additional-success-text">@Html.Raw(Model.AdditionalSuccessText)</div>

        <h2 class="govuk-heading-m " id="help-confirmation-body-heading">@Model.BodyHeading</h2>
        <div class="govuk-body" id="help-confirmation-body">@Html.Raw(Model.Body)</div>
        @{
            await Html.RenderPartialAsync("Partials/FeedbackComponent", Model.FeedbackComponent);
            var link = Model.ReturnToTheHomepageLink;
            <div class="govuk-body">
                <a id="return-button" href="@link!.Href" class="govuk-link"
                   target=@(link.OpenInNewTab ? "_blank" : "")>@link.DisplayText</a>
            </div>
        }
    </div>
</div>